<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHousehold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvUsernameHousehold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Charlie"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tvFinishedChoresHousehold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="has done 5 chores" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvUserFinishedChores"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textAlignment="viewEnd"
                android:textStyle="bold|italic"
                android:hint="@string/total_finished_chores" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>